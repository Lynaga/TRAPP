<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Interval" >
    
    <RadioGroup 
        android:id="@+id/A_radiogroup_interval"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <RadioButton
        	android:id="@+id/A_radiobutton_time"
        	android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       	 	android:text="@string/A_time_display_string" />
    
   		 <RadioButton
        	android:id="@+id/A_radiobutton_distance"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/A_distance_display_string" />
	</RadioGroup>

    <TextView 
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/A_radiogroup_interval"
        android:layout_marginTop="25dp"
        android:text="@string/S_name"/>
    
    <TextView 
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_name"
        android:layout_marginTop="25dp"
        android:text="@string/A_time_display_string" />
    
    <TextView 
        android:id="@+id/textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_time"
        android:layout_marginTop="25dp"
        android:text="@string/A_distance_display_string" />
    
    <EditText
        android:id="@+id/editText_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_toRightOf="@id/textView_name"
        android:layout_alignBaseline="@id/textView_name"
        android:layout_marginRight="14dp"
        android:layout_marginTop="71dp"
        android:ems="10" />
    
    <EditText
        android:id="@+id/editText_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/textView_time"
        android:layout_alignBaseline="@id/textView_time"
        android:layout_marginRight="14dp"
        android:layout_marginTop="71dp"
        android:ems="10" />
    
    <EditText 
        android:id="@+id/editText_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toRightOf="@id/textView_distance"
        android:layout_alignBaseline="@id/textView_distance"
        android:layout_marginRight="14dp"
        android:layout_marginTop="71dp" />
    
    <Button 
        android:id="@+id/button_save"
        android:layout_width="75dp"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:text="@string/S_save"
	    android:textSize="20sp" />
    
    <Button 
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
	    android:layout_height="50dp"
	    android:layout_toRightOf="@id/button_save"
        android:layout_alignBaseline="@id/button_save"
	    android:text="@string/S_cancel"
	    android:textSize="20sp" />
    
</RelativeLayout>
